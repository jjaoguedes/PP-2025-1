<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Geral">
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="login"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Setar Login"
            app:summary="Login para entrar no sistema" />
    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="password"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Setar Senha"
        app:summary="Senha para entrar no sitema" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="showLogin"
        android:title="Preencher Login"
        app:summary="Preencher login na tela inicial" />
</PreferenceScreen>